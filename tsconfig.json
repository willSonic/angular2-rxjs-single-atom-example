{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "node_modules/angular2/ts/typings/node/node.d.ts",
    "node_modules/angular2/typings/browser.d.ts",
    "typings/tsd.d.ts",
    "app/ts/app.ts",
    "app/ts/di-tokens.ts",
    "app/ts/Footer.ts",
    "app/ts/getName.ts",
    "app/ts/Header.ts",
    "app/ts/Todo.ts",
    "app/ts/TodoList.ts",
    "app/ts/TodoService.ts",
    "app/ts/vendor.ts",
    "app/ts/state/application-state.ts",
    "app/ts/state/applicationStateFactory.ts",
    "app/ts/state/reducers.ts",
    "app/ts/state/todoActions.ts",
    "app/ts/state/ui-state.ts"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
